<h1>Users</h1>
<div class="row">
    <%= link_to 'New User', new_user_path,  class: "btn btn-success pull-right" %>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role_name %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user),  class: "btn btn-warning btn-xs"  %>&nbsp;
          <%= link_to '&times;'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger btn-xs"  %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
