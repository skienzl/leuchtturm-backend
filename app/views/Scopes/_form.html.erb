<%= form_for(@scope) do |f| %>
  <% if @scope.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@scope.errors.count, "error") %> prohibited this scope from being saved:</h2>

      <ul>
      <% @scope.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 8 %>
  </div>
  <div class="actions">
    <%= f.submit t('save'), class: "btn btn-success" %>
  </div>
<% end %>
