<h1>Listing scopes</h1>
<div class="row">
    <%= link_to 'New Scope', new_scope_path, class: "btn btn-success pull-right" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th width="200">Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @scopes.each do |scope| %>
      <tr>
        <td><%= link_to scope.name, scope_path(scope) %></td>
        <td><%= scope.description %></td>
        <td><%= link_to t('edit'), edit_scope_path(scope), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to t('delete'), scope_path(scope) + "/delete", class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



